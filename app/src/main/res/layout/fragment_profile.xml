<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorBackground"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="80dp">

        <!-- Profile Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/spacing_md"
            android:paddingTop="@dimen/spacing_lg"
            android:paddingBottom="@dimen/spacing_md">

            <!-- Avatar -->
            <FrameLayout
                android:layout_width="@dimen/avatar_lg"
                android:layout_height="@dimen/avatar_lg">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_avatar_gradient" />

                <ImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_profile"
                    app:tint="@color/colorOnPrimary" />

            </FrameLayout>

            <!-- Name and Level -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_md"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_xl"
                    android:textStyle="bold"
                    android:textColor="@color/colorOnSurface"
                    tools:text="John Doe" />

                <TextView
                    android:id="@+id/tvLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_sm"
                    android:textColor="@color/colorMutedForeground"
                    tools:text="Level 24 Athlete" />

            </LinearLayout>

        </LinearLayout>

        <!-- Stats Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_md"
            android:background="@drawable/bg_card_muted"
            android:orientation="vertical"
            android:padding="@dimen/spacing_md">

            <!-- Stats Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Workouts -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvWorkoutsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_xl"
                        android:textStyle="bold"
                        android:textColor="@color/colorOnSurface"
                        tools:text="156" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Workouts"
                        android:textSize="@dimen/text_xs"
                        android:textColor="@color/colorMutedForeground" />

                </LinearLayout>

                <!-- Hours -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvHoursCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_xl"
                        android:textStyle="bold"
                        android:textColor="@color/colorOnSurface"
                        tools:text="89" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hours"
                        android:textSize="@dimen/text_xs"
                        android:textColor="@color/colorMutedForeground" />

                </LinearLayout>

                <!-- Streak -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvStreakCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_xl"
                        android:textStyle="bold"
                        android:textColor="@color/colorOnSurface"
                        tools:text="12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Streak"
                        android:textSize="@dimen/text_xs"
                        android:textColor="@color/colorMutedForeground" />

                </LinearLayout>

                <!-- Level -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLevelCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_xl"
                        android:textStyle="bold"
                        android:textColor="@color/colorOnSurface"
                        tools:text="24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level"
                        android:textSize="@dimen/text_xs"
                        android:textColor="@color/colorMutedForeground" />

                </LinearLayout>

            </LinearLayout>

            <!-- XP Progress Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Level Progress"
                        android:textSize="@dimen/text_xs"
                        android:textColor="@color/colorMutedForeground" />

                    <TextView
                        android:id="@+id/tvXpProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_xs"
                        android:textColor="@color/colorOnSurface"
                        tools:text="750 / 1000 XP" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/progress_bar_height_md"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:background="@drawable/bg_progress_track">

                    <View
                        android:id="@+id/xpProgressBar"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_toggle_active" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Personal Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:paddingHorizontal="@dimen/spacing_md"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Personal Info"
                android:textSize="@dimen/text_lg"
                android:textStyle="bold"
                android:textColor="@color/colorOnSurface" />

            <TextView
                android:id="@+id/btnEditInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textSize="@dimen/text_sm"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

        <!-- Personal Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_md"
            android:layout_marginTop="@dimen/spacing_sm"
            android:background="@drawable/bg_card_muted"
            android:orientation="vertical">

            <!-- Name Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/spacing_md">

                <ImageView
                    android:layout_width="@dimen/icon_md"
                    android:layout_height="@dimen/icon_md"
                    android:src="@drawable/ic_profile"
                    app:tint="@color/colorMutedForeground" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:text="Name"
                    android:textColor="@color/colorOnSurface"
                    android:textSize="@dimen/text_md" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorMutedForeground"
                    android:textSize="@dimen/text_sm"
                    tools:text="John Doe" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBorder" />

            <!-- Fitness Goals Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/spacing_md">

                <ImageView
                    android:layout_width="@dimen/icon_md"
                    android:layout_height="@dimen/icon_md"
                    android:src="@drawable/ic_target"
                    app:tint="@color/colorMutedForeground" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:text="Fitness Goals"
                    android:textColor="@color/colorOnSurface"
                    android:textSize="@dimen/text_md" />

                <TextView
                    android:id="@+id/tvGoals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorMutedForeground"
                    android:textSize="@dimen/text_sm"
                    tools:text="Build Muscle" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBorder" />

            <!-- Height Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/spacing_md">

                <ImageView
                    android:layout_width="@dimen/icon_md"
                    android:layout_height="@dimen/icon_md"
                    android:src="@drawable/ic_ruler"
                    app:tint="@color/colorMutedForeground" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:text="Height"
                    android:textColor="@color/colorOnSurface"
                    android:textSize="@dimen/text_md" />

                <TextView
                    android:id="@+id/tvHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorMutedForeground"
                    android:textSize="@dimen/text_sm"
                    tools:text="5 ft 10 in" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBorder" />

            <!-- Weight Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/spacing_md">

                <ImageView
                    android:layout_width="@dimen/icon_md"
                    android:layout_height="@dimen/icon_md"
                    android:src="@drawable/ic_scale"
                    app:tint="@color/colorMutedForeground" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:text="Weight"
                    android:textColor="@color/colorOnSurface"
                    android:textSize="@dimen/text_md" />

                <TextView
                    android:id="@+id/tvWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorMutedForeground"
                    android:textSize="@dimen/text_sm"
                    tools:text="175 lbs" />

            </LinearLayout>

        </LinearLayout>

        <!-- Settings Button -->
        <LinearLayout
            android:id="@+id/btnSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_md"
            android:layout_marginTop="@dimen/spacing_md"
            android:background="@drawable/bg_card_muted"
            android:gravity="center_vertical"
            android:padding="@dimen/spacing_md">

            <ImageView
                android:layout_width="@dimen/icon_md"
                android:layout_height="@dimen/icon_md"
                android:src="@drawable/ic_settings"
                app:tint="@color/colorMutedForeground" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_sm"
                android:text="Settings"
                android:textColor="@color/colorOnSurface"
                android:textSize="@dimen/text_md"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/icon_md"
                android:layout_height="@dimen/icon_md"
                android:src="@drawable/ic_chevron_right"
                app:tint="@color/colorMutedForeground" />

        </LinearLayout>

        <!-- Logout Button -->
        <LinearLayout
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_md"
            android:layout_marginTop="@dimen/spacing_sm"
            android:background="@drawable/bg_card_muted"
            android:gravity="center_vertical"
            android:padding="@dimen/spacing_md">

            <ImageView
                android:layout_width="@dimen/icon_md"
                android:layout_height="@dimen/icon_md"
                android:src="@drawable/ic_logout"
                app:tint="@color/colorDestructive" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_sm"
                android:text="Log Out"
                android:textColor="@color/colorDestructive"
                android:textSize="@dimen/text_md"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/icon_md"
                android:layout_height="@dimen/icon_md"
                android:src="@drawable/ic_chevron_right"
                app:tint="@color/colorMutedForeground" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
