<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorBackground">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/app_name"
            app:titleCentered="true"
            app:titleTextColor="@color/colorOnSurface" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Toggle Buttons Container -->
        <LinearLayout
            android:id="@+id/toggleContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingHorizontal="@dimen/spacing_sm"
            android:paddingVertical="@dimen/spacing_xs"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Row 1: Gender & View Toggles -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Gender Toggle -->
                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/genderToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_chip"
                    android:padding="2dp"
                    app:singleSelection="true"
                    app:selectionRequired="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMale"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="@string/male"
                        android:textSize="@dimen/text_sm"
                        app:cornerRadius="@dimen/radius_full"
                        app:icon="@drawable/ic_male"
                        app:iconSize="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFemale"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="@string/female"
                        android:textSize="@dimen/text_sm"
                        app:cornerRadius="@dimen/radius_full"
                        app:icon="@drawable/ic_female"
                        app:iconSize="16dp" />

                </com.google.android.material.button.MaterialButtonToggleGroup>

                <View
                    android:layout_width="@dimen/spacing_sm"
                    android:layout_height="0dp" />

                <!-- Body View Toggle -->
                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/viewToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_chip"
                    android:padding="2dp"
                    app:singleSelection="true"
                    app:selectionRequired="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFront"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="@string/front"
                        android:textSize="@dimen/text_sm"
                        app:cornerRadius="@dimen/radius_full" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBack"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="@string/back"
                        android:textSize="@dimen/text_sm"
                        app:cornerRadius="@dimen/radius_full" />

                </com.google.android.material.button.MaterialButtonToggleGroup>

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_xs" />

            <!-- Row 2: Detail Level & Fatigue Toggles -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Detail Level Toggle -->
                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/detailToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_chip"
                    android:padding="2dp"
                    app:singleSelection="true"
                    app:selectionRequired="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBasic"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Basic"
                        android:textSize="@dimen/text_sm"
                        app:cornerRadius="@dimen/radius_full" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAdvanced"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Advanced"
                        android:textSize="@dimen/text_sm"
                        app:cornerRadius="@dimen/radius_full" />

                </com.google.android.material.button.MaterialButtonToggleGroup>

                <View
                    android:layout_width="@dimen/spacing_sm"
                    android:layout_height="0dp" />

                <!-- Fatigue Toggle -->
                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/fatigueToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_chip"
                    android:padding="2dp"
                    app:singleSelection="true"
                    app:selectionRequired="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFatigueOn"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Fatigue"
                        android:textSize="@dimen/text_sm"
                        app:cornerRadius="@dimen/radius_full"
                        app:icon="@drawable/ic_fire"
                        app:iconSize="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFatigueOff"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Clean"
                        android:textSize="@dimen/text_sm"
                        app:cornerRadius="@dimen/radius_full" />

                </com.google.android.material.button.MaterialButtonToggleGroup>

            </LinearLayout>

        </LinearLayout>

        <!-- Anatomy View -->
        <com.fittrack.ui.home.AnatomyView
            android:id="@+id/anatomyView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/spacing_md"
            app:layout_constraintBottom_toTopOf="@id/tvHint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toggleContainer" />

        <!-- Hint Text -->
        <TextView
            android:id="@+id/tvHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tap_muscle_hint"
            android:textColor="@color/colorMutedForeground"
            android:textSize="@dimen/text_md"
            android:layout_marginBottom="@dimen/spacing_sm"
            app:layout_constraintBottom_toTopOf="@id/btnViewExercises"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- View Exercises Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewExercises"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height_lg"
            android:layout_margin="@dimen/spacing_md"
            android:text="@string/view_exercises"
            android:enabled="false"
            app:cornerRadius="@dimen/radius_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Loading Indicator -->
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/anatomyView"
            app:layout_constraintEnd_toEndOf="@id/anatomyView"
            app:layout_constraintStart_toStartOf="@id/anatomyView"
            app:layout_constraintTop_toTopOf="@id/anatomyView"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
