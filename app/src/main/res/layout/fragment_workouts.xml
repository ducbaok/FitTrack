<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorBackground"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="80dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/spacing_md"
            android:paddingTop="@dimen/spacing_md"
            android:paddingBottom="@dimen/spacing_sm">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workout"
                android:textSize="@dimen/text_2xl"
                android:textStyle="bold"
                android:textColor="@color/colorOnSurface" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Build and track your workouts"
                android:textSize="@dimen/text_sm"
                android:textColor="@color/colorMutedForeground" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBorder" />

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_md">

            <!-- 2x2 Action Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Track Workout -->
                <LinearLayout
                    android:id="@+id/btnTrackWorkout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card_muted"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_icon_purple">

                        <ImageView
                            android:layout_width="@dimen/icon_md"
                            android:layout_height="@dimen/icon_md"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_calendar"
                            app:tint="@color/colorPrimary" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:text="Track Workout"
                        android:textSize="@dimen/text_sm"
                        android:textStyle="bold"
                        android:textColor="@color/colorOnSurface" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="Daily/Weekly/Monthly"
                        android:textSize="@dimen/text_xs"
                        android:textColor="@color/colorMutedForeground" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/spacing_sm"
                    android:layout_height="0dp" />

                <!-- Build Workout -->
                <LinearLayout
                    android:id="@+id/btnBuildWorkout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card_muted"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_icon_blue">

                        <ImageView
                            android:layout_width="@dimen/icon_md"
                            android:layout_height="@dimen/icon_md"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_dumbbell"
                            app:tint="@color/colorAccentBlue" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:text="Build Workout"
                        android:textSize="@dimen/text_sm"
                        android:textStyle="bold"
                        android:textColor="@color/colorOnSurface" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="Add exercises &amp; sets"
                        android:textSize="@dimen/text_xs"
                        android:textColor="@color/colorMutedForeground" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_sm" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Build Routine -->
                <LinearLayout
                    android:id="@+id/btnBuildRoutine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card_muted"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_icon_green">

                        <ImageView
                            android:layout_width="@dimen/icon_md"
                            android:layout_height="@dimen/icon_md"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_list"
                            app:tint="@color/colorAccentGreen" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:text="Build Routine"
                        android:textSize="@dimen/text_sm"
                        android:textStyle="bold"
                        android:textColor="@color/colorOnSurface" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="Weekly/Monthly plan"
                        android:textSize="@dimen/text_xs"
                        android:textColor="@color/colorMutedForeground" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/spacing_sm"
                    android:layout_height="0dp" />

                <!-- History -->
                <LinearLayout
                    android:id="@+id/btnHistory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card_muted"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_icon_orange">

                        <ImageView
                            android:layout_width="@dimen/icon_md"
                            android:layout_height="@dimen/icon_md"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_history"
                            app:tint="@color/colorAccentOrange" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:text="History"
                        android:textSize="@dimen/text_sm"
                        android:textStyle="bold"
                        android:textColor="@color/colorOnSurface" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="Recent exercises"
                        android:textSize="@dimen/text_xs"
                        android:textColor="@color/colorMutedForeground" />

                </LinearLayout>

            </LinearLayout>

            <!-- My Workouts Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lg"
                android:text="My Workouts"
                android:textSize="@dimen/text_lg"
                android:textStyle="bold"
                android:textColor="@color/colorOnSurface" />

            <!-- Workouts List Container -->
            <LinearLayout
                android:id="@+id/workoutsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:orientation="vertical">

                <!-- Workout items will be added programmatically -->

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
