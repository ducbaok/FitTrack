<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_card_muted"
    android:padding="@dimen/spacing_md"
    android:layout_marginBottom="@dimen/spacing_sm">

    <!-- Header Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvExerciseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_md"
                android:textStyle="bold"
                android:textColor="@color/colorOnSurface"
                tools:text="Bench Press" />

            <TextView
                android:id="@+id/tvMuscle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_xs"
                android:textColor="@color/colorMutedForeground"
                tools:text="Chest" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnRemove"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_icon_button"
            android:src="@drawable/ic_chevron_down"
            android:rotation="45"
            android:scaleType="center"
            android:contentDescription="Remove exercise"
            app:tint="@color/colorMutedForeground" />

    </LinearLayout>

    <!-- Controls Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_sm"
        android:orientation="horizontal">

        <!-- Sets -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sets"
                android:textSize="@dimen/text_xs"
                android:textColor="@color/colorMutedForeground" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btnSetsMinus"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/bg_chip"
                    android:src="@drawable/ic_chevron_down"
                    android:rotation="90"
                    android:scaleType="center"
                    android:contentDescription="Decrease sets"
                    app:tint="@color/colorOnSurface" />

                <TextView
                    android:id="@+id/tvSets"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/text_md"
                    android:textStyle="bold"
                    android:textColor="@color/colorOnSurface"
                    tools:text="3" />

                <ImageButton
                    android:id="@+id/btnSetsPlus"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/bg_chip"
                    android:src="@drawable/ic_chevron_down"
                    android:rotation="-90"
                    android:scaleType="center"
                    android:contentDescription="Increase sets"
                    app:tint="@color/colorOnSurface" />

            </LinearLayout>

        </LinearLayout>

        <!-- Reps -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reps"
                android:textSize="@dimen/text_xs"
                android:textColor="@color/colorMutedForeground" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btnRepsMinus"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/bg_chip"
                    android:src="@drawable/ic_chevron_down"
                    android:rotation="90"
                    android:scaleType="center"
                    android:contentDescription="Decrease reps"
                    app:tint="@color/colorOnSurface" />

                <TextView
                    android:id="@+id/tvReps"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/text_md"
                    android:textStyle="bold"
                    android:textColor="@color/colorOnSurface"
                    tools:text="10" />

                <ImageButton
                    android:id="@+id/btnRepsPlus"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/bg_chip"
                    android:src="@drawable/ic_chevron_down"
                    android:rotation="-90"
                    android:scaleType="center"
                    android:contentDescription="Increase reps"
                    app:tint="@color/colorOnSurface" />

            </LinearLayout>

        </LinearLayout>

        <!-- Weight -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight (kg)"
                android:textSize="@dimen/text_xs"
                android:textColor="@color/colorMutedForeground" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btnWeightMinus"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/bg_chip"
                    android:src="@drawable/ic_chevron_down"
                    android:rotation="90"
                    android:scaleType="center"
                    android:contentDescription="Decrease weight"
                    app:tint="@color/colorOnSurface" />

                <TextView
                    android:id="@+id/tvWeight"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/text_md"
                    android:textStyle="bold"
                    android:textColor="@color/colorOnSurface"
                    tools:text="0" />

                <ImageButton
                    android:id="@+id/btnWeightPlus"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/bg_chip"
                    android:src="@drawable/ic_chevron_down"
                    android:rotation="-90"
                    android:scaleType="center"
                    android:contentDescription="Increase weight"
                    app:tint="@color/colorOnSurface" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
