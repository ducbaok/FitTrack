<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorBackground">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/spacing_md"
        android:paddingVertical="@dimen/spacing_sm"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_icon_button"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            app:tint="@color/colorOnSurface" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/spacing_sm"
            android:text="Settings"
            android:textSize="@dimen/text_xl"
            android:textStyle="bold"
            android:textColor="@color/colorOnSurface" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:id="@+id/dividerTop"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorBorder"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/spacing_xl"
        app:layout_constraintTop_toBottomOf="@id/dividerTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_md">

            <!-- Preferences Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PREFERENCES"
                android:textSize="@dimen/text_sm"
                android:textStyle="bold"
                android:textColor="@color/colorMutedForeground" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:background="@drawable/bg_card_muted"
                android:orientation="vertical">

                <!-- Notifications -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        android:layout_width="@dimen/icon_md"
                        android:layout_height="@dimen/icon_md"
                        android:src="@drawable/ic_notifications"
                        app:tint="@color/colorMutedForeground" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:text="Notifications"
                        android:textColor="@color/colorOnSurface"
                        android:textSize="@dimen/text_md" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switchNotifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorBorder" />

                <!-- Dark Mode -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        android:layout_width="@dimen/icon_md"
                        android:layout_height="@dimen/icon_md"
                        android:src="@drawable/ic_moon"
                        app:tint="@color/colorMutedForeground" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:text="Dark Mode"
                        android:textColor="@color/colorOnSurface"
                        android:textSize="@dimen/text_md" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switchDarkMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorBorder" />

                <!-- Language -->
                <LinearLayout
                    android:id="@+id/btnLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        android:layout_width="@dimen/icon_md"
                        android:layout_height="@dimen/icon_md"
                        android:src="@drawable/ic_globe"
                        app:tint="@color/colorMutedForeground" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:text="Language"
                        android:textColor="@color/colorOnSurface"
                        android:textSize="@dimen/text_md" />

                    <TextView
                        android:id="@+id/tvLanguage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="English"
                        android:textColor="@color/colorMutedForeground"
                        android:textSize="@dimen/text_sm" />

                </LinearLayout>

            </LinearLayout>

            <!-- Security Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                android:text="SECURITY"
                android:textSize="@dimen/text_sm"
                android:textStyle="bold"
                android:textColor="@color/colorMutedForeground" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:background="@drawable/bg_card_muted"
                android:orientation="vertical">

                <!-- Change Password -->
                <LinearLayout
                    android:id="@+id/btnChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        android:layout_width="@dimen/icon_md"
                        android:layout_height="@dimen/icon_md"
                        android:src="@drawable/ic_lock"
                        app:tint="@color/colorMutedForeground" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:text="Change Password"
                        android:textColor="@color/colorOnSurface"
                        android:textSize="@dimen/text_md" />

                </LinearLayout>

            </LinearLayout>

            <!-- Support Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                android:text="SUPPORT"
                android:textSize="@dimen/text_sm"
                android:textStyle="bold"
                android:textColor="@color/colorMutedForeground" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:background="@drawable/bg_card_muted"
                android:orientation="vertical">

                <!-- Help & Support -->
                <LinearLayout
                    android:id="@+id/btnHelp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        android:layout_width="@dimen/icon_md"
                        android:layout_height="@dimen/icon_md"
                        android:src="@drawable/ic_help"
                        app:tint="@color/colorMutedForeground" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:text="Help &amp; Support"
                        android:textColor="@color/colorOnSurface"
                        android:textSize="@dimen/text_md" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorBorder" />

                <!-- Terms & Privacy -->
                <LinearLayout
                    android:id="@+id/btnTerms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        android:layout_width="@dimen/icon_md"
                        android:layout_height="@dimen/icon_md"
                        android:src="@drawable/ic_document"
                        app:tint="@color/colorMutedForeground" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:text="Terms &amp; Privacy"
                        android:textColor="@color/colorOnSurface"
                        android:textSize="@dimen/text_md" />

                </LinearLayout>

            </LinearLayout>

            <!-- Logout Button -->
            <LinearLayout
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                android:background="@drawable/bg_button_destructive"
                android:gravity="center"
                android:padding="@dimen/spacing_md">

                <ImageView
                    android:layout_width="@dimen/icon_md"
                    android:layout_height="@dimen/icon_md"
                    android:src="@drawable/ic_logout"
                    app:tint="@color/colorDestructive" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:text="Log Out"
                    android:textStyle="bold"
                    android:textColor="@color/colorDestructive"
                    android:textSize="@dimen/text_md" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
