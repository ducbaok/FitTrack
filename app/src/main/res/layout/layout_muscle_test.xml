<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Muscle Test View"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <!-- Test with your right_hand.xml -->
    <com.fittrack.ui.home.MuscleView
        android:id="@+id/muscleViewTest"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:tag="muscle_forearm_right"
        android:background="@android:color/transparent"
        app:muscleDrawable="@drawable/right_hand" />

    <TextView
        android:id="@+id/tvMuscleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Tap the muscle above"
        android:textSize="18sp" />

</LinearLayout>
