<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorBackground">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/spacing_md"
        android:paddingVertical="@dimen/spacing_sm"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_icon_button"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            app:tint="@color/colorOnSurface" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/spacing_sm"
            android:text="Track Workout"
            android:textSize="@dimen/text_xl"
            android:textStyle="bold"
            android:textColor="@color/colorOnSurface" />

        <ImageButton
            android:id="@+id/btnCalendar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_icon_button"
            android:src="@drawable/ic_calendar"
            android:contentDescription="Calendar"
            app:tint="@color/colorOnSurface" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:id="@+id/dividerTop"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorBorder"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/spacing_xl"
        app:layout_constraintTop_toBottomOf="@id/dividerTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_md">

            <!-- Period Selector -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_card_muted"
                android:padding="4dp">

                <TextView
                    android:id="@+id/btnDaily"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Daily"
                    android:textSize="@dimen/text_xs"
                    android:textStyle="bold"
                    android:textColor="@color/colorMutedForeground" />

                <TextView
                    android:id="@+id/btnWeekly"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Weekly"
                    android:textSize="@dimen/text_xs"
                    android:textStyle="bold"
                    android:background="@drawable/bg_toggle_active"
                    android:textColor="@color/colorOnSurface" />

                <TextView
                    android:id="@+id/btnMonthly"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Monthly"
                    android:textSize="@dimen/text_xs"
                    android:textStyle="bold"
                    android:textColor="@color/colorMutedForeground" />

                <TextView
                    android:id="@+id/btnYearly"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Yearly"
                    android:textSize="@dimen/text_xs"
                    android:textStyle="bold"
                    android:textColor="@color/colorMutedForeground" />

            </LinearLayout>

            <!-- Stats Grid (2x2) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                android:orientation="horizontal">

                <!-- Workouts Count -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_card_muted"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_dumbbell"
                        app:tint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/tvWorkoutCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:textSize="@dimen/text_2xl"
                        android:textStyle="bold"
                        android:textColor="@color/colorOnSurface"
                        tools:text="4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Workouts"
                        android:textSize="@dimen/text_xs"
                        android:textColor="@color/colorMutedForeground" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/spacing_sm"
                    android:layout_height="0dp" />

                <!-- Duration -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_card_muted"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_clock"
                        app:tint="@color/colorAccentBlue" />

                    <TextView
                        android:id="@+id/tvDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:textSize="@dimen/text_2xl"
                        android:textStyle="bold"
                        android:textColor="@color/colorOnSurface"
                        tools:text="3h 12min" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duration"
                        android:textSize="@dimen/text_xs"
                        android:textColor="@color/colorMutedForeground" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:orientation="horizontal">

                <!-- Volume -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_card_muted"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_trending_up"
                        app:tint="@color/colorAccentGreen" />

                    <TextView
                        android:id="@+id/tvVolume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:textSize="@dimen/text_2xl"
                        android:textStyle="bold"
                        android:textColor="@color/colorOnSurface"
                        tools:text="55.7K kg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Volume"
                        android:textSize="@dimen/text_xs"
                        android:textColor="@color/colorMutedForeground" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/spacing_sm"
                    android:layout_height="0dp" />

                <!-- Calories -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_card_muted"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_target"
                        app:tint="@color/colorAccentOrange" />

                    <TextView
                        android:id="@+id/tvCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:textSize="@dimen/text_2xl"
                        android:textStyle="bold"
                        android:textColor="@color/colorOnSurface"
                        tools:text="1280" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calories"
                        android:textSize="@dimen/text_xs"
                        android:textColor="@color/colorMutedForeground" />

                </LinearLayout>

            </LinearLayout>

            <!-- Progress Chart -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                android:orientation="vertical"
                android:background="@drawable/bg_card_muted"
                android:padding="@dimen/spacing_md">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progress"
                    android:textSize="@dimen/text_lg"
                    android:textStyle="bold"
                    android:textColor="@color/colorOnSurface" />

                <!-- Simple Bar Chart -->
                <LinearLayout
                    android:id="@+id/chartContainer"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:orientation="horizontal"
                    android:gravity="bottom">

                    <!-- Bars will be added programmatically or use include -->
                    <include layout="@layout/item_chart_bar" android:id="@+id/barMon" />
                    <include layout="@layout/item_chart_bar" android:id="@+id/barTue" />
                    <include layout="@layout/item_chart_bar" android:id="@+id/barWed" />
                    <include layout="@layout/item_chart_bar" android:id="@+id/barThu" />
                    <include layout="@layout/item_chart_bar" android:id="@+id/barFri" />
                    <include layout="@layout/item_chart_bar" android:id="@+id/barSat" />
                    <include layout="@layout/item_chart_bar" android:id="@+id/barSun" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
