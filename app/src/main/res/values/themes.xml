<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Dark -->
    <style name="Base.Theme.FitTrack" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryContainer">@color/purple_800</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnPrimaryContainer">@color/purple_100</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorSecondaryContainer">@color/purple_700</item>
        <item name="colorOnSecondaryContainer">@color/purple_100</item>
        
        <!-- Background and surface -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorSurfaceVariant">@color/colorSurfaceVariant</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnSurfaceVariant">@color/colorOnSurfaceVariant</item>
        
        <!-- Outline/Divider -->
        <item name="colorOutline">@color/colorBorder</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
    </style>

    <style name="Theme.FitTrack" parent="Base.Theme.FitTrack" />
    
    <!-- Splash screen theme -->
    <style name="Theme.FitTrack.Splash" parent="Theme.FitTrack">
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>
</resources>